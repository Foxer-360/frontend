{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/server",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@source/*": ["src/*"]
    }
  },
  "exclude": [
    "acceptance-tests",
    "build",
    "config",
    "jest",
    "node_modules",
    "public",
    "scripts",
    "webpack"
  ]
}
